<h1 class="title"><%= title %></h1>
<% if (game.image !== 'false') { %>
  <img class="game-image" src=<%= game.image %>>
<% } %>
<h2>Description</h2>
<p><%= game.description %></p>

<h2>Category</h2>
<a href="<%= game.category.url %>">
  <p><%= game.category.name %></p>
</a>

<h2>Price (new)</h2>
<p>$<%= game.price %></p>

<% if (locals.game_instances.length > 0) { %>
  <h2>Used copies available (<%= game_instances.length %>)</h2>
  <ul>
    <% locals.game_instances.forEach((instance, index) => { %> 
      <a href="<%= instance.url %>">
        <li>
          (<%= index + 1 %>) 
          <%= instance.condition %> -
          [$<%= instance.price %>]
          <%= instance.language %>
        </li>
      </a>
    <% }) %>
  </ul>
<% } %>

<div class="button-box">  
  <a href="<%= `${game.url}/delete` %>">
    <div class="form-submit">Delete</div>
  </a> 
  <a href="<%= `${game.url}/update` %>">
    <div class="form-submit">Update</div>
  </a>
</div>


